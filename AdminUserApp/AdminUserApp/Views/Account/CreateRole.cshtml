@model AdminUserApp.Models.Role

@{
    ViewBag.Title = "CreateRole";
}

<div style="background-color:#214761;">
    <h2 style="margin-left:100px; color:#ffffff;">Yeni rol tanımla</h2>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="margin-bottom:500px;">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-primary" style="width:140px" onclick="return confirm('Yeni rol oluşturulsun mu ? ');" />
                <a href="@Url.Action("AdminDashboard","Dashboard")">
                    <input type="button" value="Vazgeç" class="btn btn-group-lg" style="width:135px" />
                </a>
            </div>
        </div>
    </div>
}