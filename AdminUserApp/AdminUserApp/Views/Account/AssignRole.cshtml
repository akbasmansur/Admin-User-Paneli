@model IEnumerable<AdminUserApp.Models.User>

@{
    ViewBag.Title = "AssignRole";
}

<div style="background-color:#214761;">
    <h2 style="margin-left:100px; color:#ffffff;">Kullanıcıya rol ata / rolünü değiştir</h2>
</div>
<table class="table" style="margin-bottom:350px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rol.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rol.RoleName)
        </td>
        <td>
            @Html.ActionLink("Rol Ataması Yap", "RolAta", new { id=item.UserId })
        </td>
    </tr>
}

</table>
